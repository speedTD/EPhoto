<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/id_dialog_as_txt"
    android:text="@string/effect"
    android:gravity="center"
    android:textSize="24sp"
    android:textColor="#ec0808"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <HorizontalScrollView
        android:layout_below="@id/id_dialog_as_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_below="@+id/id_dialog_as_txt"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/id_dilog_anh_xanh"
        android:layout_margin="2dp"
        android:src="@drawable/danphuchy"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <ImageButton
        android:id="@+id/id_dilog_anh_do"
        android:layout_margin="2dp"
        android:src="@drawable/cungky"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <ImageButton
        android:id="@+id/id_dilog_anh_amban"
        android:layout_margin="2dp"
        android:src="@drawable/backcolap"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <ImageButton
        android:layout_margin="2dp"
        android:src="@drawable/cungky"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <ImageButton
        android:layout_margin="2dp"
        android:src="@drawable/thuvien"
        android:layout_width="100dp"
        android:layout_height="100dp" />

</LinearLayout>
 </HorizontalScrollView>
</RelativeLayout>