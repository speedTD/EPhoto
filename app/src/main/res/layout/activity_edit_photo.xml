<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="10"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EditPhotoActivity">
    <LinearLayout
        android:layout_weight="1"
        android:weightSum="12"
        android:orientation="horizontal"
        android:background="#003731ec"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageButton
            android:id="@+id/id_menu_add"
            android:layout_weight="2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src= "@drawable/add1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/id_menu_edit_but_ve"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src= "@drawable/butve"
            android:layout_weight="2"
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/id_menu_edit_them_chu"
            android:layout_weight="2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src= "@drawable/text"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/id_menu_edit_anh_sang"
            android:layout_weight="2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src= "@drawable/light"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/id_menu_edit_tay"
            android:layout_weight="2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src= "@drawable/tay"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/id_menu_edit_luu_anh"
            android:layout_weight="2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src= "@drawable/save"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="9"
        android:background="#fd000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--<com.example.admin.ephoto.DrawableImageView-->
            <!--android:paddingBottom="20dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:id="@+id/id_edit_hinh_loai_1">-->
        <!--</com.example.admin.ephoto.DrawableImageView>-->
        <com.example.admin.ephoto.PaintLineView
            android:layout_gravity="center"
            android:id="@+id/id_paintview"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
    <Button
        android:text="Chon Mau Chá»¯"
        android:background="#01050000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>