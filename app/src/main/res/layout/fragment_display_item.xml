<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DisplayItemActivity">

    <!-- TODO: Update blank fragment layout -->

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/id_display_item"
        android:scaleType="centerCrop"
        android:src="@drawable/cungky"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/id_display_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/id_display_item_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="Share"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/id_display_item_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="Delete"
            android:textColor="#ffffff"
            android:textSize="25sp" />
    </LinearLayout>


</FrameLayout>